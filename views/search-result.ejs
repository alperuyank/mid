<%-include('./partials/header.ejs')%>

<body>
    <%-include('./partials/leftbar.ejs')%>
    <main>
        <!-- Page content -->
        <div class="content">
            <div class="content-top">
                <button class="btn sort-btn" data-sort="price" style="margin: 5px 2px">
                    Fiyata Göre Sırala
                </button>
                <button class="btn sort-btn" data-sort="name" style="margin: 5px 2px">
                    İsme Göre Sırala
                </button>
            </div>
            <div class="home-containerTop">
                <div class="owl-carousel" id="content-card">
                    <div class="item">
                        <img src="/img/<%= products[0].imageUrl %>">
                        <a><%= products[0].name %></a>
                        <a><%= products[0].price %>TL</a>
                    </div>
                    <div class="item">
                        <img src="/img/<%= products[2].imageUrl %>">
                        <a><%= products[2].name %></a>
                        <a><%= products[2].price %>TL</a>
                    </div>
                    <div class="item">
                        <img src="/img/<%= products[4].imageUrl %>">
                        <a><%= products[4].name %></a>
                        <a><%= products[4].price %>TL</a>
                    </div>
                    <div class="item">
                        <img src="/img/<%= products[6].imageUrl %>">
                        <a><%= products[6].name %></a>
                        <a><%= products[6].price %>TL</a>
                    </div>
                </div>
            </div>
        </div>
        <%-include('./partials/footer.ejs')%>
    </main>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.owl-carousel').owlCarousel({
            loop:true,
            margin:10,
            responsive:{
                0:{
                items:1
                },
                600:{
                items:3
                },
                1000:{
                items:5
                }
            },
            nav: true,
            navText: ["<i class='fa fa-chevron-left'></i>","<i class='fa fa-chevron-right'></i>"]
            });
        });
    </script>
</body>
