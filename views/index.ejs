<%-include('./partials/header.ejs')%>

<body>
    <%-include('./partials/navbar.ejs')%>
    <main>
        <div class="welcome">
            <img src="/img/welcome.png">
        </div>
        <div class="home-container">
            <div class="home-containerTop">
                <a href="/?gender=Kadın" class="menuItem">Kadin</a>
                <a href="/?gender=Erkek" class="menuItem">Erkek</a>
                <a class="menuItem">Divided</a>
                <a href="/?gender=Bebek" class="menuItem">Bebek</a>
                <a href="/?gender=Çocuk" class="menuItem">Çocuk</a>
                <a class="menuItem">H&M HOME</a>
                <a class="menuItem">Spor</a>
            </div>
            <div class="owl-carousel">
              <% products.forEach(product => { %>
                <div class="item">
                    <a href="/product-details/<%= product.id %>">
                        <img src="/img/<%= product.imageUrl %>">
                        <a><%= product.name %></a>
                        <a><%= product.price %>TL</a>
                    </a>
                </div>
            <% }) %>
            </div>
        </div>    
    </main>
    <%-include('./partials/footer.ejs')%>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.owl-carousel').owlCarousel({
              loop:true,
              margin:10,
              responsive:{
                0:{
                  items:1
                },
                600:{
                  items:3
                },
                1000:{
                  items:5
                }
              },
              nav: true, // Enable navigation
              navText: ["<i class='fa fa-chevron-left'></i>","<i class='fa fa-chevron-right'></i>"] // Custom navigation icons
            });
          });
    </script>
</body>
